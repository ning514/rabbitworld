<div class="header">
  <div class="logo">
    <%= link_to '<img src="https://img.icons8.com/external-icongeek26-flat-icongeek26/64/000000/external-rabbit-origami-icongeek26-flat-icongeek26.png"/>Rabbit World'.html_safe, {controller: '/main', action: 'index'} %>
  </div>
  <div class="menu">
    <a href="#" class="showmenu"><i class="fa fa-bars fa-2x"></i></a>
    <ul class="menu-list">
      <li><%= link_to '認識兔子', {controller: '/rabbit/info', action: 'index'}, {} %></li>
      <li><%= link_to '飼養百科', {controller: '/rabbit/info', action: 'feed'}, {} %></li>
