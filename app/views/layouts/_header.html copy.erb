      <li><%= link_to '線上購物', {controller: '/shop/customer', action: 'index'}, {} %></li>
    </ul>
    <ul class="user-list">
      <% if session[:user].present? %>
        <% if session[:user]["priv"] == 'admin' %>
          <li><%= link_to '商品管理', {controller: '/management/product', action: 'index'}, {title: '商品管理'} %></li>
        <% end %>
        <li><%= link_to '<i class="fa fa-shopping-cart fa-lg"></i>'.html_safe,
          {controller: '/cart', action: 'index'}, {title: '購物車'} %></li>
        <li><%= link_to '登出', {controller: '/login', action: 'logout'}, {title: '登出帳號'} %></li>
      <% else %>
        <li><%= link_to '<i class="fa fa-user fa-lg"></i>'.html_safe, {controller: '/login', action: 'index'}, {title: '登入帳號'} %></li>
      <% end %>
    </ul>
  </div>
</div>