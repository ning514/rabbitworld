<div class="flex-container">
  <% @data.each do |d| %>
  <%# (0..20).each do %>
    <div class="flex-card">
      <img src="https://fakeimg.pl/270x200/?text=Picture">
      <div style="font-size:20px;font-weight:bold;"><%= d.name %></div>
      <div style="display:inline-block">
        <div style="float:left;width:210px;padding-top:8px;">$<%= d.price %></div>
        <div style="float:right;width:40px;">
          <button type="button" class="btn_add_to_chart" data-id="<%= d.id %>"><i class="fa fa-cart-plus fa-lg"></i></button>
        </div>
      </div>
    </div>
  <% end %>
</div>